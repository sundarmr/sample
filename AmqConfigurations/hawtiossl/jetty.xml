<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//
DTD Configure//EN" "http://jetty.mortbay.org/configure.dtd">

<Configure class="org.eclipse.jetty.server.Server">

    <!-- =========================================================== -->
    <!-- Set connectors                                              -->
    <!-- =========================================================== -->
    <!-- One of each type!                                           -->
    <!-- =========================================================== -->

    <!-- Use this connector for many frequently idle connections
         and for threadless continuations.-->
    <Call name="addConnector"> 
	<Arg> 
		<New class="org.eclipse.jetty.server.ssl.SslSelectChannelConnector">
			<Arg> 
				<New class="org.eclipse.jetty.http.ssl.SslContextFactory"> 
					<Set name="ExcludeProtocols"> 
						<Array type="java.lang.String"> 
							<Item>SSLv3</Item> 
						</Array>
					</Set>
					<Set name="keyStore">Full qualified Path of the keystore</Set>
					<Set name="keyStorePassword">Password to the keystore</Set> 
					<Set name="keyManagerPassword">Key Password if any</Set>
				</New>
			</Arg>
			<Set name="port">https port </Set>
			<Set name="maxIdleTime">time in milliseconds</Set> 
	   </New>
	</Arg>
    </Call> 
    <Call name="addBean">
        <Arg>
            <New class="org.eclipse.jetty.plus.jaas.JAASLoginService">
                <Set name="name">karaf</Set>
                <Set name="loginModuleName">karaf</Set>
                <Set name="roleClassNames">
                    <Array type="java.lang.String">
                        <Item>org.apache.karaf.jaas.boot.principal.RolePrincipal</Item>
                    </Array>
                </Set>
            </New>
        </Arg>
    </Call>
</Configure>
